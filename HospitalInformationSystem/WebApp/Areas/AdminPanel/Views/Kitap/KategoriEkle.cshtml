@model WebApp.Models.Kitap_Kategori

@{
    ViewData["Title"] = "KategoriEkle";
}

<h1>Var olan Kategoriler</h1>
<ul>
    @foreach(Kitap_Kategori kk in ViewBag.Kategoriler)
    {
        <li>@kk.Kategori.KategoriAdi</li>
    }
</ul>

<h1>KategoriEkle</h1>

<h4>Kitap_Kategori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KategoriEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KitapID" class="control-label"></label>
                <select asp-for="KitapID" class ="form-control" asp-items="ViewBag.KitapID"></select>
               
            </div>
            <div class="form-group">
                <label asp-for="KategoriID" class="control-label"></label>
                <select asp-for="KategoriID" class ="form-control" asp-items="ViewBag.KategoriID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
