@using Microsoft.AspNetCore.Identity
@using WebApp.Models

@inject SignInManager<Uye> SignInManager
@inject UserManager<Uye> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        //Admin veya Uye olmasına göre özelleştir...

        if (@UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin").Result)
        {
            <li class="nav-item" style="width:180px">
                <a asp-action="Index" asp-controller="Admin" asp-area="AdminPanel" >Admin Paneline Git</a>
            </li>
        }
        else
        {   <li>
                <a asp-action="SepetGoster" asp-controller="Uye" asp-area="UyePanel"></a>
            </li>
            <li class="nav-item" style="width:180px">
                <a asp-action="Index" asp-controller="Uye" asp-area="UyePanel"> Hasta Paneline Git</a>
            </li>
        }


    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserAsync(User).Result.Ad!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Kayıt</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş</a>
    </li>
}
</ul>